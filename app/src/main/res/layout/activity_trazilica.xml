<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrazilicaActivity"
    android:background="@drawable/gradient_background_all">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/all_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-20dp">
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="-15dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="90dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/trazilica"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:iconifiedByDefault="false"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:queryHint="PretraÅ¾i..."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/objekti_potkategorije"
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
    <ImageButton
        android:id="@+id/kategorijeGumb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/all_button"
        android:fontFamily=""
        android:outlineSpotShadowColor="@color/blue_green"
        android:src="@drawable/ic_baseline_home_24"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>